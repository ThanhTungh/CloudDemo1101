<div class="container text-center bg-light card">
    <form action="/check" method="post">
        <div class="form-group mt-2 mb-2">
            <div class="alert alert-warning" style="background-color: black;">
                <h1 style="color: white;">Welcome to TNT store</h1>
            </div>
            {{#if loginFailed}}
            <div class="form-group mt-2 mb-2">
                <div class="alert alert-danger" role="alert">
                    Please log in again.
                </div>
            </div>
            {{/if}}
            <label class="text text-danger">Username</label>
            <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="text text-danger">Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group mt-2 mb-2">
            <input class="btn btn-primary" type="submit" value="Login">
        </div>
    </form>

</div>