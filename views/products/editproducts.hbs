<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav">
            <h4>Toy store</h4>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="/home">Home</a></li>
                <li><a href="/products">Store in Ha Noi</a></li>
                <li><a href="/products2">Store in HCM</a></li>
                <br><br>
                <div class="logout-btn">
                    <a href="/logout" class="btn btn-primary">Logout</a>
                </div>
            </ul><br>
        </div>
        <div class="col-sm-9">
            <div class="container text-center mt-3 mb-3 col-md-8">
                <form class="card bg-light ml-3 mr-3" action="/products/edit/{{product._id}}" method="post">
                    <h1 class="text text-primary mt-2 mb-2">Add new product</h1>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Name</label>
                        <input class="form-control" type="text" name="name" required minlength="3" maxlength="30"
                            value="{{product.name}}">
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Price</label>
                        <input class="form-control" type="number" name="price" required min="19" max="2023"
                            value="{{product.price}}">
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Image</label>
                        <input class="form-control" type="text" name="pictureURL" required 
                        value="{{product.pictureURL}}">
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <input class="btn btn-danger" type="submit" value="Update">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

