<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav">
            <h4>Toy store</h4>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="/home">Home</a></li>
                <li><a href="/products">Store in Ha Noi</a></li>
                <li><a href="/products2">Store in HCM</a></li>
                <br><br>
                <div class="logout-btn">
                    <a href="/logout" class="btn btn-primary">Logout</a>
                </div>
            </ul><br>
        </div>

        <div class="col-sm-9">
            <div class="container text-center mt-3 mb-3 col-md-8">
                <form action="/products/add" method="post">
                    <h1 class="text text-primary mt-2 mb-2">Add new product</h1>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Name</label>
                        <input class="form-control" type="text" name="name" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Price</label>
                        <input class="form-control" type="text" name="price" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Image</label>
                        <input class="form-control" type="text" name="pictureURL">
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Brand</label>
                        <input class="form-control" type="text" name="brand" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Video</label>
                        <input class="form-control" type="text" name="video" required>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <label for="">Category</label>
                        <select class="form-control" name="category" required>
                            <option value="">Select a category</option>
                            <option value="Action Figures">Action Figures</option>
                            <option value="Dolls">Dolls</option>
                            <option value="Board Games">Board Games</option>
                            <option value="Puzzles">Puzzles</option>
                            <option value="Plush Toys">Plush Toys</option>
                        </select>
                    </div>
                    <div class="form-group mt-2 mb-2">
                        <input type="submit" value="Insert">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>